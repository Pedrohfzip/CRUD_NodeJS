
<header>
    <div class="container">
        <div class="row">
            <div class="colun">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href='/'>Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/cadastrar">Cadastrar</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>
<main>
    <div class="container mt-3">
        <div class="row">
            <div class="colun">
                <div class="table-responsive-md">
                    <table class="table">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Count</th>
                                <th>Price</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                                <tr>
                                    <td>{{dataValues.id}}</td>
                                    <td>{{dataValues.name}}</td>
                                    <td>{{dataValues.qtd}}</td>
                                    <td>{{dataValues.price}}</td>
                                    <td>
                                        <a class="btn btn-warning" href="/edit/{{dataValues.id}}">Edit</a>
                                        <a class="btn btn-danger" href="/delete/{{dataValues.id}}">Delete</a>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</main>